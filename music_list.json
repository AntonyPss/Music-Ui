{
    "namespace": "music_list",

    // Main top panel shown on screen.
    "top_panel": {
        "type": "stack_panel",
        "orientation": "horizontal",
        "size": ["100%", "100%cm + 4px"]
    },

    // Reusable item used for each track/album display.
    "track_item": {
        "type": "panel",
        "size": ["fill", "100%cm"],
        "controls": [
            {
                "item_common@music.track_item_common": {
                    "$songCover|default": "textures/covers/coverEmpty", // Default cover if none provided
                    "$songName|default": "card.unknow.track", // Default name if none provided
                    "$songDuration|default": "00:00", // Default duration if none provided
                    "$songArtist|default": "card.unknow.artist", // Default artist if none provided
                    "$songAudio|default": "random.click" // Default audio if none provided
                }
            }
        ]
    },
    //---------------------------------------------------------------------------
    // Main List Section
    //---------------------------------------------------------------------------

    "main_list_content": {
        "type": "stack_panel",
        "size": ["100%", "100%c"],
        "controls": [
            {
